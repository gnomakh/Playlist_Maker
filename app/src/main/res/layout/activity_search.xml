<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <ImageView style="@style/BackArrow"
            android:id = "@+id/back_button"
            android:src="@drawable/arrow_back" />

        <TextView style ="@style/HeadingTextStyle"
            android:text="@string/search"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_shape"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp">

        <EditText android:id="@+id/inputSearch"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingVertical="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:backgroundTint="@color/transparent"
            android:drawableStart="@drawable/search"
            android:drawableTint="@color/search_content_color"
            android:drawablePadding="4dp"
            android:hint="@string/search_hint"
            android:textColorHint="@color/search_content_color"
            android:textColor="@color/staticTextColor"
            android:textFontWeight="500"
            app:cornerRadius="16dp"
            android:maxLines="1"
            android:inputType="text"/>

        <ImageView android:id="@+id/clearButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cross"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>
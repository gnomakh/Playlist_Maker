<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:paddingHorizontal="14dp"
    android:paddingVertical="8dp"
    android:id="@+id/track_item">

    <ImageView
        android:id="@+id/artwork_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/TrackNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/ArtistNameStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/text_placeholder" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/dot_divider"
                app:tint="@color/artist_name_color" />

            <TextView
                android:id="@+id/track_duration"
                style="@style/ArtistNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/text_placeholder" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/track_arrow_forward"
        style="@style/IconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_forward" />
</LinearLayout>
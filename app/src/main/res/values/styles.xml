<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/mainMenuButtonColor</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/staticTextColor</item>
        <item name="iconGravity">textStart</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/staticTextColor</item>
        <item name="android:elevation">0dp</item>>
    </style>

    <style name="BackArrow">
        <item name="android:tint">@color/headingTextColor</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">#3772E7</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="tint">@color/iconColor</item>
    </style>

    <style name="HeadingTextStyle">
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:drawableTint">@color/searchContentColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/staticTextColor</item>
        <item name="android:textColorHint">@color/searchContentColor</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/trackNameColor</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="PlayerTrackNameStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/trackNameColor</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ArtistNameStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/artistNameColor</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="PlayerArtistNameStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/trackNameColor</item>
        <item name="android:fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SearchPlaceholderStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="RoundedButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/roundedButtonTextColor</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="trackDetailsStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/trackDetailsColor</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="PlaybackTimeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="trackDetailsValueStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/headingTextColor</item>
        <item name="android:fontWeight">400</item>
    </style>


    <style name="customTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="bottomNavStyle">
        <item name="backgroundTint">@color/backgroundColor</item>
    </style>

    <style name="bottomSheetStyle">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="background">@drawable/rounder</item>
    </style>

    <style name="PlaylistCreationButtonStyle">
        <item name="android:background">@drawable/playlist_creation_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/mainMenuButtonColor</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomSheetTitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/tabTextColor</item>
    </style>

    <style name="PlaylistTextMediaStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/tabTextColor</item>
    </style>

</resources>
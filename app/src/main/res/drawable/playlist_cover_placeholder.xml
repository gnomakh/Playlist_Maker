<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="312dp"
        android:height="312dp"
        android:gravity="center">

        <shape android:shape="rectangle">
            <stroke
                android:color="@color/trackDetailsColor"
                android:width="1dp"
                android:dashWidth="36dp"
                android:dashGap="36dp"/>

            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:width="80dp"
        android:height="80dp"
        android:gravity="center"
        android:drawable="@drawable/upload_image">

    </item>
</layer-list>